
<% if now_user.joined?(event) %>
 <%= form_with(model: now_user.relationships.find_by(event_id: event.id), local:true, method: :delete) do |f| %>
 <%= hidden_field_tag :event_id, event.id %>
 <%= f.submit '参加解除する' %>
 <% end %>
 <% else %>
 <%= form_with(model: now_user.relationships.build, local: true) do |f| %>
 <%= hidden_field_tag :event_id, event.id %>
 <%= f.submit '参加登録' %>
 <% end %>
 <% end %>