<div class='text-center'><%= link_to 'アカウント情報の修正', edit_user_path(now_user) %></div>

<h1>イベント作成ページです。</h1>


  <% @event.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>

  <%= form_with(model: @event, local:true) do |f| %>


  <div>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, placeholder: 'event名を入力してください'  %>
  </div>
  
  <div>
    <%= f.label :place, '場所' %>
    <%= f.text_field :place, placeholder: '開催場所' %>
  </div>
  
  <div>
    <%= f.label :date, '日付' %>
    <%= f.date_field :date %>
  </div>
  
  <div>
    <%= f.label :hour, '時間' %>
    <%= f.time_field :hour %>
  </div>
  
  <div>
    <%= f.label :minimum_people, '最小実行人数' %>
    <%= f.number_field :minimum_people, placeholder: '人数を入力してください' %>
  </div>
  
  <div>
    <%= f.label :material, '必要道具一覧' %>
    <%= f.text_area :material, placeholder: '必要な持ち物を入力してください' %>
  </div>
  
  
  <div>
    <%= f.label :commnet, 'コメントを入力する' %>
    <%= f.text_area :comment, placeholder: '何かあればコメントしてくださう' %>
  </div>
  
  <div>
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>
  
  <%= f.submit '作成する' %>
  
  <% end %>
  
  
